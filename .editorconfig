; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true

[*]
end_of_line = CRLF

[*.sh]
end_of_line = LF

[*.ps1]
indent_style = space
indent_size = 2

[*.cs]
indent_style = space
indent_size = 4

[*.csproj]
indent_style = space
indent_size = 2

[*.cake]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[*.xaml]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2